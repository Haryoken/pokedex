<xsd:schema version="1.0"
           xmlns:xsd="http://www.w3.org/2001/XMLSchema"
           targetNamespace="https://www.pokedex.com/schemas/TypeList.xsd"           
           xmlns="https://www.pokedex.com/schemas/TypeList.xsd"              
           elementFormDefault="qualified">
    <xsd:element name="TypeList">
        <xsd:complexType>
            <xsd:sequence>
                <xsd:element name="pokemonType" type="Type"/>
            </xsd:sequence>
        </xsd:complexType>
    </xsd:element>
    
    <xsd:complexType name="Type">
        <xsd:sequence>
            <xsd:element name="typeLabel" type="xsd:string"/>
            <xsd:element name="typeIconURI" type="xsd:anyURI" nillable="true"/>
        </xsd:sequence>
    </xsd:complexType>
    
</xsd:schema>
